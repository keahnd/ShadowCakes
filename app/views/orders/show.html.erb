<h1> Orders Show </h1>
<table class = "table">
	<thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Size</th>
          <th>Quantity</th>
          <th>Item Subtotal</th>
        </tr>
	</thead>
  	<tbody>
  		<% @order_items.each do |item| %>
			<tr>
				<td><%= item.product.name %> </td>
				<td><%= item.product.price %> </td>
				<td><%= item.diffSize %> </td>

				<td><%= item.quantity %> </td>

				<td><%= number_to_currency(item.total) %> </td>
			</tr>
		<% end %>
	</tbody>
</table>
<h3><strong>Order Total: </strong><%= number_to_currency(@order.subtotal) %></h3>



